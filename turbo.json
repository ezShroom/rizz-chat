{
	"$schema": "https://turborepo.com/schema.json",
	"globalEnv": [
		"DATABASE_URL",
		"DATABASE_AUTH_TOKEN",
		"BETTER_AUTH_SECRET",
		"BETTER_AUTH_URL",
		"COOKIE_DOMAIN",
		"DISCORD_CLIENT_SECRET",
		"PUBLIC_DISCORD_APP_ID"
	],
	"globalPassThroughEnv": [
		"DATABASE_URL",
		"DATABASE_AUTH_TOKEN",
		"BETTER_AUTH_SECRET",
		"BETTER_AUTH_URL",
		"COOKIE_DOMAIN",
		"DISCORD_CLIENT_SECRET",
		"PUBLIC_DISCORD_APP_ID",
		"GROQ_KEY"
	],
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": ["dist/**", ".svelte-kit/**", ".wrangler/**"]
		},
		"check": {
			"dependsOn": ["^check"]
		},
		"style": {
			"dependsOn": ["^style"]
		},
		"fix_style": {},
		"lint": {
			"dependsOn": ["^lint"]
		},
		"db": { "persistent": true, "cache": false },
		"dev": { "dependsOn": ["shared#build"], "persistent": true, "cache": false }
	}
}
